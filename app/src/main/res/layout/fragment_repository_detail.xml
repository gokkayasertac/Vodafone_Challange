<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.repositorydetail.RepositoryDetailFragment">

    <ImageView
        android:id="@+id/repo_owner_avatar_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:transitionName="userImage"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/repo_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repo Name"
        android:textSize="20sp"
        android:textStyle="bold"

        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/repo_owner_avatar_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner Name"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray_variant"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/repo_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/private_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="private"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/repo_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="25dp"
        android:text="Descripti sdfsdf sdfs df fds fds fsd sfdf sdonssssssssssss Lorem ipsum dolor sit amet"
        app:layout_constraintTop_toBottomOf="@id/private_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>