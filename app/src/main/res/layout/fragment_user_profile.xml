<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    tools:context=".presentation.userprofile.UserProfileFragment">

    <ProgressBar
        android:id="@+id/user_profile_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminateTint="@color/gray"
        android:elevation="50dp"
        app:layout_constraintTop_toTopOf="@id/profile_top_info_card_view"
        app:layout_constraintBottom_toBottomOf="@id/profile_top_info_card_view"
        app:layout_constraintStart_toStartOf="@id/profile_top_info_card_view"
        app:layout_constraintEnd_toEndOf="@id/profile_top_info_card_view"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:id="@+id/profile_top_info_card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/sky_blue"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/user_avatar_image_view"
                android:layout_marginTop="10dp"
                android:layout_width="75dp"
                android:transitionName="userImage"
                android:layout_height="75dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/user_email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/user_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/user_information_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_gravity="center_horizontal"
                android:text="lorem ipsum dolor sit amet de viala ko ala vu don jues te more kon test ta ziala oma kÄ± la."
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/user_repos_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="50dp"
        android:indeterminateTint="@color/sky_blue"
        app:layout_constraintTop_toTopOf="@id/user_repos_recycler_view"
        app:layout_constraintBottom_toBottomOf="@id/user_repos_recycler_view"
        app:layout_constraintStart_toStartOf="@id/user_repos_recycler_view"
        app:layout_constraintEnd_toEndOf="@id/user_repos_recycler_view"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_repos_recycler_view"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/user_repo_item"
        app:layout_constraintTop_toBottomOf="@id/profile_top_info_card_view"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>